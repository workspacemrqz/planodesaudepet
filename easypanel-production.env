# Configurações específicas para produção no EasyPanel
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Configurações de sessão para produção
SESSION_SECRET=your-super-secret-session-key-here-change-this-in-production
TRUST_PROXY=false

# Configurações de banco de dados
DATABASE_URL=your-production-database-url-here

# Configurações de autenticação admin
LOGIN=your-admin-username
SENHA=your-admin-password

# Configurações de cache e performance
VITE_API_TIMEOUT=10000
VITE_MAX_FILE_SIZE=5242880
VITE_DEFAULT_CACHE_TTL=300000
VITE_MAX_CACHE_TTL=3600000

# Configurações de build
VITE_BUILD_OPTIMIZATION=true
VITE_IMAGE_OPTIMIZATION=true
VITE_CSS_PURGE=true

# Configurações de monitoramento
VITE_MONITORING_ENABLED=true
VITE_ANALYTICS_ENABLED=false

# Configurações de segurança
VITE_FEATURE_DARK_MODE=false
VITE_FEATURE_ADVANCED_SEARCH=false
VITE_FEATURE_REALTIME_UPDATES=false
