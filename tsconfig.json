{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
      "exclude": [
      "node_modules", 
      "client/dist", 
      "**/*.test.ts",
      "uploads/**/*"
    ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["vite/client"],
    "typeRoots": ["./client/src/types", "./node_modules/@types"]
  }
}
