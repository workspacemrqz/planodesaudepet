# Easypanel Configuration
# This file contains configuration for Easypanel deployment

# Build Configuration
BUILD_METHOD=buildpacks
BUILDER=heroku/builder:24
BUILDPACKS=heroku/nodejs#v24

# Environment Variables
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Build Commands
BUILD_COMMAND=npm run build:simple
START_COMMAND=npm start

# Health Check
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Resources
CPU_LIMIT=0.5
MEMORY_LIMIT=512Mi
