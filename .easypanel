# Easypanel Configuration
# This file contains specific configurations for Easypanel deployment

# Build configuration
BUILD_METHOD=buildpacks
BUILDER=heroku/builder:24
BUILDPACKS=heroku/nodejs

# Environment variables
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Health check configuration
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Resource limits
CPU_LIMIT=0.5
MEMORY_LIMIT=512Mi

# Build commands
PRE_BUILD=npm ci --only=production
BUILD=npm run build:easypanel
START=npm start
