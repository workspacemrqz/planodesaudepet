# Heroku Buildpack Configuration
# Este arquivo contém configurações específicas para o buildpack do Heroku v24

# Configurações do Node.js
NODE_VERSION=24.6.0
NPM_VERSION=10.2.4

# Configurações de Build
BUILD_COMMAND=npm run build:simple
START_COMMAND=npm start

# Configurações de Dependências
NODE_ENV=production
NPM_CONFIG_PRODUCTION=true

# Configurações de Cache
CACHE_DIR=node_modules
BUILD_CACHE=true

# Configurações de Log
LOG_LEVEL=info
VERBOSE_LOGGING=false

# Configurações de Performance
NODE_OPTIONS=--max-old-space-size=512
NPM_CONFIG_CACHE=.npm

# Configurações de Segurança
NPM_CONFIG_AUDIT=false
NPM_CONFIG_FUND=false

# Configurações de Buildpack
BUILDPACK_VERSION=24
BUILDPACK_URL=https://github.com/heroku/heroku-buildpack-nodejs.git
