# Buildpack Configuration for Heroku v24
# Este arquivo contém configurações específicas para o buildpack

# Configurações do Buildpack
BUILDPACK_NAME=heroku/nodejs
BUILDPACK_VERSION=24
BUILDPACK_URL=https://github.com/heroku/heroku-buildpack-nodejs.git#v24

# Configurações do Builder
BUILDER_IMAGE=heroku/builder:24
BUILDER_VERSION=24

# Configurações do Node.js
NODE_VERSION=24.6.0
NPM_VERSION=10.2.4
YARN_VERSION=1.22.19

# Configurações de Build
BUILD_COMMAND=npm run build:simple
START_COMMAND=npm start
POSTINSTALL_COMMAND=npm run build:simple

# Configurações de Dependências
NODE_ENV=production
NPM_CONFIG_PRODUCTION=true
NPM_CONFIG_AUDIT=false
NPM_CONFIG_FUND=false

# Configurações de Cache
CACHE_DIR=node_modules
BUILD_CACHE=true
NPM_CONFIG_CACHE=.npm

# Configurações de Performance
NODE_OPTIONS=--max-old-space-size=512
NPM_CONFIG_UPDATE_NOTIFIER=false

# Configurações de Log
LOG_LEVEL=info
VERBOSE_LOGGING=false
BUILDPACK_DEBUG=false

# Configurações de Segurança
NPM_CONFIG_STRICT_SSL=true
NPM_CONFIG_REGISTRY=https://registry.npmjs.org/

# Configurações de Buildpack
BUILDPACK_CACHE_ENABLED=true
BUILDPACK_CACHE_TTL=86400
BUILDPACK_CACHE_SIZE=100MB

# Configurações de Deploy
DEPLOY_ENVIRONMENT=production
DEPLOY_PLATFORM=easypanel
DEPLOY_METHOD=buildpacks
