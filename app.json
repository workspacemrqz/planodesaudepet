{
  "name": "unipetplan",
  "description": "Sistema de plano de saúde para pets - Deploy limpo com autenticação por variáveis de ambiente",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL (required)",
      "required": true
    },
    "LOGIN": {
      "description": "Admin username/email for login",
      "required": true
    },
    "SENHA": {
      "description": "Admin password (minimum 12 characters)",
      "required": true
    },
    "LOGIN": {
      "description": "Alternative admin login (legacy support)",
      "required": false
    },
    "SENHA": {
      "description": "Alternative admin password (legacy support)",
      "required": false
    },
    "SESSION_SECRET": {
      "description": "Secret key for session management (minimum 32 characters)",
      "generator": "secret"
    },
    "PORT": {
      "description": "Port number for the application",
      "value": "80"
    },
    "HOST": {
      "description": "Host for the application",
      "value": "0.0.0.0"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "stack": "heroku-24"
}