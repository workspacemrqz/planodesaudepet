{
  "name": "unipet-plan",
  "description": "Plataforma de planos de saúde pet",
  "repository": "https://github.com/seu-usuario/planodesaudepet",
  "logo": "https://via.placeholder.com/150x150/277677/FFFFFF?text=UNIPET",
  "keywords": ["node", "express", "react", "typescript", "postgresql"],
  "stack": "heroku-24",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Ambiente de execução",
      "value": "production",
      "required": true
    },
    "PORT": {
      "description": "Porta onde a aplicação será executada",
      "value": "8080"
    },
    "HOST": {
      "description": "Host da aplicação",
      "value": "0.0.0.0"
    },
    "DATABASE_URL": {
      "description": "URL de conexão com PostgreSQL",
      "required": true
    },
    "LOGIN": {
      "description": "Email para login do admin",
      "required": true
    },
    "SENHA": {
      "description": "Senha para login do admin",
      "required": true
    },
    "SESSION_SECRET": {
      "description": "Chave secreta para sessões",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "npm run build"
  }
}
