{
  "name": "unipet-plan",
  "description": "Plataforma de planos de saúde pet",
  "repository": "https://github.com/seu-usuario/planodesaudepet",
  "logo": "https://via.placeholder.com/150x150/277677/FFFFFF?text=UNIPET",
  "keywords": ["node", "express", "react", "typescript", "postgresql"],
  "buildpacks": [
    {
      "url": "heroku/nodejs",
      "version": "24"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Ambiente de execução",
      "value": "production"
    },
    "PORT": {
      "description": "Porta onde a aplicação será executada",
      "value": "8080"
    },
    "HOST": {
      "description": "Host da aplicação",
      "value": "0.0.0.0"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "scripts": {
    "postinstall": "npm run build:simple"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
