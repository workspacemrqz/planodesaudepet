{
  "name": "plano-de-saude-pet",
  "description": "Sistema de plano de sa√∫de para pets",
  "buildpacks": [
    {
      "url": "heroku/builder:24"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "required": true
    },
    "LOGIN": {
      "description": "Admin login",
      "required": true
    },
    "SENHA": {
      "description": "Admin password",
      "required": true
    },
    "PORT": {
      "description": "Port number for the application",
      "value": "80"
    },
    "HOST": {
      "description": "Host for the application",
      "value": "0.0.0.0"
    },
    "SESSION_SECRET": {
      "description": "Secret key for session management",
      "generator": "secret"
    }
  },
  "scripts": {
    "postdeploy": "npm run db:push"
  }
}