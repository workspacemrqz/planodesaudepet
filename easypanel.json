{
  "build": {
    "type": "buildpacks",
    "builder": "heroku/builder:24",
    "buildCommand": "npm run build"
  },
  "env": {
    "NODE_ENV": "production",
    "NPM_CONFIG_PRODUCTION": "false",
    "PORT": "8080",
    "HOST": "0.0.0.0"
  },
  "healthCheck": {
    "path": "/api/diagnostic",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "ports": [
    {
      "published": 80,
      "target": 8080
    }
  ]
}
